<h1 align="center">Log in</h1>

<%= form_for(:session, :html => {class: "", role: "form"}, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :email, class: "float-right" %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :password, class: "float-right" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>