<%= render "shared/errors", obj: @user %>

<%= form_for(@user, :html => {class: "", role: "form"}) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :username, class: "float-right" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :email, class: "float-right" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :password, class: "float-right" %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <%= f.submit(@user.new_record? ? "Sign in" : "Update account", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
<% end %>

<p class="text-center">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</p>
